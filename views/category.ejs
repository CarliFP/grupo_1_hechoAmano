<!DOCTYPE html>
<html>

        <head>
            <%- include ('./partials/head') %>   
        </head>

        <body> 
            <%- include ('./partials/header') %>
            <h2 style="margin-top: 150px">CATEGORIA: <%= title %> </h2>
            <main class= "container row">

                <section class= "container row">
                    <% for (let i = 0; i < product.length; i++) { %> 
                        <article class="product col">
                            <div class= "img-box">
                                <a href="product/<%=product[i].id%>/detail">                               
                                  <img  src= "/img/<%= product[i].image %> " alt="<%= product[i].name %> ">
                                </a>    
                             </div>
                             <div class="related-article1">
                                <h3 class="price">$ <%= product[i].price %> </h3>
                                <h4 class="payment-method">Hasta <%= product[i].payment %>  cuotas</h4>
                                <h4 class="description"><%= product[i].name %> </h4>
                            </div>
                        </article> 
                        <% } %>
                </section>
           
                <% if (!product) { %> 
                    <div>
                        <h2 style="color: tomato;">No hay productos aún en esta categoría</h2>
                        <p>¿Deseas comenzar a vender? Registrate como vendedor <a href ="/users/register">aquí</a></p>
                    </div>
                <% } %>
            </main>

        <!--FOOTER-->
        <%- include ('./partials/footer') %>
            
  </body>
</html>