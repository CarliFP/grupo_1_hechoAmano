<!DOCTYPE html>
<html>

        <head>
            <%- include ('./partials/head') %>   
        </head>

        <body> 
            <%- include ('./partials/header') %>
            <h2 style="margin-top: 150px">TODOS LOS PRODUCTOS</h2>
            <main class= "container row">

                <section class= "container row">
                    <% if (products.length) { %>
                        <% for (product of products) { %>
                            <article class ="product col">
                                <div class= "img-box">
                                    <a href="/product/<%=product.id%>/detail">                             
                                      <img  src="../img/<%= product.image %> " alt="<%= product.name %> ">
                                        
                                 </div>
                                <div class="main-article1">
                                    <h3 class="price">$ <%= product.price %> </h3>
                                    <h4 class="payment-method">Hasta <%= product.payment %>  cuotas</h4>
                                    <h4 class="description"><%= product.name %> </h4>
                                </div>
                            </a>   
                            </article> 
                </section>
            </div>
            <% } %>	
        <% } else { %>
            <div>
                <h2 style="color: tomato;">No se cargaron productos a√∫n</h2>
            </div>
        <% } %>
            </main>

        <!--FOOTER-->
        <%- include ('./partials/footer') %>
            
  </body>
</html>