<body>
        <main>     
        
           <section>   
            <div class="title">
                <img src ="../img/logoEn-amarillo-.png">
                <h1>FORMULARIO DE CREACIÓN DE PRODUCTO</h1>   
                <h4>Ingreso exclusivo con clave administrador</h4>
                <input type="password" class="login-field" value="" placeholder="Contraseña" id="login-pass" required>
                <input class="submit-button" type="submit" value="Enviar">


                <div>
                    <h4>¿Querés crear un nuevo producto?</h4>

                    <form action="/product" method="POST" enctype="multipart/form-data">
                        <div class="row product-detail">
                            <div class="col-12 col-md-6">
                                <label for="name" class="form-label">Nombre del producto:</label>
                                <input type="text" id="name" name="name" placeholder="Ej: nombre del producto" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="seller" class="form-label">Vendedor:</label>
                                <input type="text" id="seller" name="seller" placeholder="Ej: Vendedor" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="price" class="form-label">Precio del producto:</label>
                                <input type="number" id="price" name="price" placeholder="Ej: 5678" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="stock" class="form-label">Stock:</label>
                                <input type="number" id="stock" name="stock" placeholder="Ej: 6" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="shipping" class="form-label">Costo de envío:</label>
                                <input type="number" id="shipping" name="shipping" placeholder="Ej: 56" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="payment" class="form-label">Cuotas:</label>
                                <input type="number" id="payment" name="payment" placeholder="Ej: 150" class="form-input">
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="category" class="form-label">Categoría:</label>
                                <select name="category" id="category" class="form-input">
                                    <option value="">Elegí</option>
                                    <option value="arte">Arte</option>
                                    <option value="accesorios">Accesorios</option>
                                    <option value="ropa-y-calzado">Ropa y calzado</option>
                                    <option value="cosmetica">Cosmética</option>
                                    <option value="juegos">Juegos</option>
                                    <option value="hogar">Hogar</option>
                                </select>
                            </div>
                            <div class="col-12 col-md-6">
                                <label for="status" class="form-label">Sección en el index:</label>
                                <select name="status" id="status" class="form-input">
                                    <option value="">Elegí</option>
                                    <option value="destacados">destacados</option>
                                    <option value="vendidos">vendidos</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="image" class="form-label">Imagen:</label>
                                <input type="file" name="image" id="image" class="form-input">
                            </div>
                            <div class="col-12">
                                <label for="description" class="form-label">Descripción:</label>
                                <textarea name="description" id="description" class="form-input"></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="buy-now-button">Guardar producto</button>
                            </div>
                        </div>
                    </form>
                </div>
        
    
    </main>
</body>
</html>

